<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="1.0dip" />
            <solid android:color="#ffdad8d8" />
            <stroke android:width="0.0dip" android:color="#ff27c027" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="1.0dip" />
                <solid android:color="#ff27c027" />
                <stroke android:width="0.0dip" android:color="@color/mctool_orange" />
            </shape>
        </clip>
    </item>
</layer-list>