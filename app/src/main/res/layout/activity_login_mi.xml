<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/transparent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_tip"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40.0dip"
        android:src="@drawable/ic_mi_login" />

    <TextView
        android:id="@id/tv_tip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/rly_login"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10.0dip"
        android:layout_marginTop="30.0dip"
        android:gravity="center"
        android:paddingBottom="8.0dip"
        android:paddingTop="8.0dip"
        android:text="小米账号可以直接登陆葫芦侠了"
        android:textColor="#ffcccccc"
        android:textSize="14.0sp" />

    <RelativeLayout
        android:id="@id/rly_login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="30.0dip"
        android:layout_marginRight="30.0dip"
        android:background="@drawable/style_button_orange_rect_5p"
        android:paddingBottom="8.0dip"
        android:paddingTop="8.0dip"
        android:visibility="visible">

        <TextView
            android:id="@id/tv_login2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/ic_mi"
            android:drawablePadding="5.0dip"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="18.0sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/rly_login_floor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rly_login"
        android:layout_marginLeft="30.0dip"
        android:layout_marginRight="30.0dip"
        android:layout_marginTop="30.0dip"
        android:background="@drawable/style_button_gray4_all_5p"
        android:paddingBottom="8.0dip"
        android:paddingTop="8.0dip"
        android:visibility="visible">

        <TextView
            android:id="@id/tv_login_floor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="5.0dip"
            android:gravity="center"
            android:text="用3楼账号登录"
            android:textColor="@color/white"
            android:textSize="18.0sp" />
    </RelativeLayout>

    <TextView
        android:id="@id/tv_close"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rly_login_floor"
        android:layout_marginLeft="30.0dip"
        android:layout_marginRight="30.0dip"
        android:layout_marginTop="30.0dip"
        android:background="@drawable/style_button_gray4_all_5p"
        android:gravity="center"
        android:paddingBottom="8.0dip"
        android:paddingTop="8.0dip"
        android:text="关闭"
        android:textColor="#ffcccccc"
        android:textSize="18.0sp" />

    <include
        layout="@layout/layout_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />
</RelativeLayout>